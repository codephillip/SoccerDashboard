<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="50dp"
                  android:layout_alignParentRight="true" android:id="@+id/linearLayout2">

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/awayImageTeam"
                   android:src="@drawable/abc_btn_rating_star_off_mtrl_alpha"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="5dp"
                  android:layout_marginTop="15dp"
                  android:id="@+id/awayTeam"
                  android:text="@string/hello_world"/>
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/centerLayout"
                  android:layout_alignParentTop="true"
                  android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time"
            android:id="@+id/date"
            android:padding="3dp"
            android:layout_marginTop="7dp"
           />

    </LinearLayout>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="5dp"
              android:layout_marginTop="15dp"
              android:text="@string/hello_world2" android:id="@+id/homeTeam"
              android:layout_alignParentTop="true" android:layout_toLeftOf="@+id/homeTeamImage"
              android:layout_toStartOf="@+id/homeTeamImage"/>
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/abc_btn_rating_star_off_mtrl_alpha"
               android:layout_alignParentTop="true" android:layout_toLeftOf="@+id/centerLayout"
               android:layout_toStartOf="@+id/centerLayout" android:layout_marginRight="21dp"
               android:layout_marginEnd="21dp" android:id="@+id/homeTeamImage"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/score"
        android:id="@+id/score"
        android:layout_alignBottom="@+id/homeTeam" android:layout_centerHorizontal="true"/>


</RelativeLayout>