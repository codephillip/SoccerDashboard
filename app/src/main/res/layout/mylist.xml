<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal" >


        <LinearLayout android:layout_width="50dp"
                      android:id="@+id/leftLayout"
                      android:padding="5dp"
                      android:layout_alignParentLeft="true"
                      android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="1"
                      android:id="@+id/teamposition"
                      android:layout_marginTop="13dp"
                      android:textSize="16sp"
                      android:layout_weight="8"
                      android:padding="2dp"/>
        </LinearLayout>


        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentRight="true"
                      android:orientation="horizontal" android:id="@+id/linearLayout">

            <!--<TextView-->
                <!--android:id="@+id/item"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Chelsea"-->
                <!--android:textAppearance="?android:attr/textAppearanceMedium"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:padding="2dp"-->
                <!--android:textColor="#33CC33" />-->


            <TextView
                android:id="@+id/playedgames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/wins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/draws"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/losses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/goaldifference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"/>


            <TextView
                android:id="@+id/points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textColorHint="#30bcff"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
    <TextView
        android:id="@+id/teamname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chelsea"
        android:layout_alignBottom="@+id/linearLayout" android:layout_toRightOf="@+id/icon"
        android:layout_toEndOf="@+id/icon"/>
    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/abc_btn_rating_star_off_mtrl_alpha"
        android:layout_weight="2"
        android:padding="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"/>

</RelativeLayout>