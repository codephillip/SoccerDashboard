<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cyan_primary</item>
        <item name="colorPrimaryDark">@color/cyan_primary_dark</item>
        <item name="colorAccent">@color/accent_yellow</item>
    </style>

    <!-- Main activity theme. -->
    <style name="ForecastTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Soccer.NoTitle</item>
    </style>

    <style name="ActionBar.Solid.Soccer.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@mipmap/ic_launcher</item>
    </style>

</resources>
